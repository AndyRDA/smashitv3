---
import Navbar from '../components/Navbar';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Navbar client:load/>
    <h1>Discover your daily calorie needs and unlock your potential.</h1>

		<slot />
	</body>
</html>
<style is:global>
	*,
*::before,
*::after {
	margin: 0;
	padding: 0;
	box-sizing: border-box;
	font: inherit;
}

:root {
	--bg-color: 0 0% 0%;
	--accent-color: 189 86% 53%;
	--bg-contrast: 189 86% 53%;
}

body {
	background-color: hsl(var(--bg-color));
	color: hsl(var(--bg-contrast));
	font-family: "Poppins", sans-serif;
}

h1{
  font-size: 2rem;
  max-width: 30ch;
  margin-block: 6rem 0;
  margin-inline: auto;
  text-align: center;

}

.calc_wrapper{
	display: grid;
	place-items: center;
	max-width: 100vw;
  padding-top: 1rem;
}

form{
  display: flex;
  align-items: center;
  flex-direction: column;
  /* margin: 1em; */
}

.form_inputs {
	display: flex;
	flex-wrap: wrap;
	align-items: center;
	justify-content: center;
  gap: 2em;
  max-width: 600px;
}

fieldset {
	--group-width: 8em;
	--icon-height: 4em;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-between;
	font-size: inherit;
	width: var(--group-width);
  border: none;
  padding: 0.5em;
  border-radius: 5px;
}
fieldset label {
  display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-between;
}

fieldset input {
  background-color: hsl(var(--bg-color));
  border: none;
  border-bottom: 2px solid hsl(var(--accent-color) /.4);
  text-align: center;
  font-size: inherit;
  font-family: inherit;
  color: hsl(var(--accent-color));
  padding-block: 0.5em;
  text-transform: capitalize;
  position: relative;
}

fieldset input:focus{
 outline: none;
}

#age::after{
  content: "";
  position: absolute;
  right: 0;
  bottom: 0;
  color: hsla(var(--bg-contrast) / 0.5);
  height: 100px;
  width: 100px;
  background-color: aliceblue;
  z-index: 99;
outline: ;
}

fieldset:focus-within, fieldset:hover{
  box-shadow: 4px 4px 10px 2px hsl(var(--accent-color) / 0.1);
}

fieldset > label > svg {
	height: var(--icon-height);
}

.sex_radio_group {
	display: flex;
	flex-direction: row;
  overflow: hidden;
}

.sex_fieldset label {
	width: calc(var(--group-width) / 2 + 1.5em);
	height: calc(var(--icon-height) + 0.5em);
	border: solid 1px hsl(var(--bg-contrast));
	background-color: hsl(var(--bg-color));
	box-shadow: 0 0 0 rgba(255, 255, 255, 0);
	transition: border-color 0.15s ease-out, color 0.25s ease-out,
		background-color 0.15s ease-out, box-shadow 0.15s ease-out;
	display: flex;
	justify-content: center;
	align-items: center;

	&:first-of-type {
		border-radius: 6px 0 0 6px;
	}
	&:last-of-type {
		border-radius: 0 6px 6px 0;
		border-left: none;
	}
}

.sex_label{
  margin-top: 0.5em;
  text-transform: capitalize;
}
input:hover + label {
	/* border: 1px solid transparent; */
  background-color: hsl(var(--accent-color) / 0.2);
	/* outline: 2px dotted hsl(var(--bg-contrast)); */
	/* outline-offset: -2px; */
}
input:checked + .sex_radio_label {
	background-color: hsl(var(--bg-contrast));
	color: hsl(var(--bg-color));
	box-shadow: 0 0 10px hsla(var(--bg-contrast), 0.5);
	border-color: hsl(var(--bg-contrast));
	z-index: 1;
	& svg path {
		fill: hsl(var(--bg-color));
	}
}

input[type="radio"] {
	width: 0;
	height: 0;
	position: absolute;
	z-index: -99;
}
input[type="radio"] > label:hover,
input[type="radio"] > label:focus-visible
{
  color: hsl(var(--bg-color));
  background-color: hsla(var(--bg-contrast) / 0.5);
}

.calc_btn {
	padding: 1em 2em;
  margin-block: 2em;
  background-color: hsl(var(--bg-color));
  color: hsl(var(--bg-contrast));
  border: 2px solid hsl(var(--accent-color));
  border-radius: 5px;
}
.calc_btn:hover,
.calc_btn:focus-visible {
  background-color: hsl(var(--bg-contrast));
  color: hsl(var(--bg-color));
}



form[data-show-results="false"] {
	gap: 1em;
}
form[data-show-results="true"] {
	flex-direction: column;
}


/* results section styles */

.results_wrapper[data-show-results="false"] {
	display: none;
}

.results_wrapper[data-show-results="true"] {
	display: block;
  max-width: 100vw;
  display: flex;
  flex-wrap: wrap;
  gap: 2em;
  align-items: center;
  justify-content: center;
  margin-block: 2em;
}

.option_wrapper{
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1em;
  font-size: clamp(0.875rem, 0.7838rem + 0.4865vw, 2rem);
    width: 300px;

}

.option_wrapper > h3 {
  font-weight: bold;
  text-align: center;
  /* padding-inline: 1em; */
}

.option_wrapper > p {
  text-align: center;
}

.option {
  display: flex;
  flex-wrap: wrap;
  width: clamp(200px, 300px, 80vw);
  /* display: grid;
  grid-template-columns: 3em 1fr 3em; */
  font-size: clamp(0.875rem, 0.7027rem + 0.9189vw, 2rem);
	gap: 1em;
  align-items: center;
  justify-content: space-between;
  border: 1px solid hsla(var(--bg-contrast) / 0.5);
  border-radius: 5px;
}

.option > * {
  text-align: center;
}

.option > p {
  text-transform: capitalize;
}

.option > button {
  /* display: block; */
  /* width: min-content; */
  padding: 0.5em 1em;
  justify-self: center;
  /* border: 1px solid hsla(var(--bg-contrast) / 0.5); */
  border-radius: 5px;
  border: none;

  color: hsl(var(--bg-contrast));
  background-color: hsl(var(--bg-color));
  transition: color 200ms ease-in-out, background-color 200ms ease-in-out;
}

.option > button:hover,
.option > button:focus-visible{
  color: hsl(var(--bg-color));
  background-color: hsla(var(--bg-contrast) / 0.5);
}

/* .results{
  display: flex;
  flex-wrap: wrap;
  gap: 2em;
  justify-content: center;
  align-items: center;
  max-width: 600px;

} */

.results_section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 1em;
}

.results_section h4 {
  font-size: 1.2em;
  font-weight: bolder;
}

.results_section .number {
  font-size: clamp(1.5625rem, 1.4459rem + 1vw, 3rem);
  min-width: 4ch;
  text-align: center;
} 

.macronutrients {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 1em;
  position: relative;
}

.results_cals{
  padding-block: 2em 3em;
  display: grid;
  grid-template-areas: "stack";
  place-content: center;
}

.results_cals .number {
  text-align: center;
  width: 100%;
  font-size: 3em;
}

.results_cals_wrapper{
  grid-area: stack;
  margin: auto;
}
.results_cals_circle{
  grid-area: stack;
}
.results_cals_circle > circle{
  stroke: hsl(var(--bg-contrast) / 0.8);
}

.bar{
  width: 400px;
  height: 10px;
  /* border-radius: 300px; */
  position: absolute;
  top: -1em;
  opacity: .7;
}


@media (min-width: 950px){

  .calc_wrapper[data-show-results="true"]{
    grid-template-columns: 200px 1fr;
  }

  .form[data-show-results="true"] fieldset{
    --group-width: 2em;
  }
  .form_inputs[data-show-results="true"]{
    justify-content: flex-start;
  }


  label[data-show-results="true"] {
    flex-direction: row;
    --group-width: 2em;
    --icon-height: 1.5em;

  }
  label[data-show-results="true"] input{
    width: 4em;
  }
  label[data-show-results="true"] svg{
    --icon-height: 1.5em;
    /* width: 4em; */
  }
  .sex_fieldset[data-show-results="true"]{
    align-items: flex-start;
    padding-left: 1.5em;
    width: auto;
  }
  .sex_radio_label[data-show-results="true"]>svg{
    width: 1.5em;
    height: 1.5em;
  }

  .results_wrapper[data-show-results="true"]{
    display: grid;
    place-items: center;
    grid-template-areas:
      "exercise goal"
      "cals cals"
      "carbs macros";
    grid-template-columns: 1fr 1fr;
    /* grid-template-rows: repeat(3, 1fr); */
  }
 
  .option_exercise{
    grid-area: exercise;
  }
  .option_goal{
    grid-area: goal;
  }
  .option_carbs{
    grid-area: carbs;
  }
  .results_cals{
    grid-area: cals;
  }

  .macronutrients{
    grid-area: macros;
  }

  

}



