---
import Layout from "../layouts/Layout.astro";
import CalorieCalc from "../components/CalorieCalc";
const metaName =
	"Calorie Calculator & Personalized Meal Plans | Smashit Personal Training";
const metaContent =
	"Calculate your daily calorie needs and macronutrient goals with our easy-to-use calorie calculator, and get a personalized meal plan from Smashit personal trainers. Reach your fitness goals in a healthy and sustainable way with Smashit!";
---

<Layout
	title="Smashit! Calorie Calculator"
	metaName={metaName}
	metaContent={metaContent}
>
	<header>
		<div class="skew-divider"></div>
		<div class="title-wrapper">
			<h1>
				Calculate your daily calorie needs and macronutrient goals with our
				easy-to-use calorie calculator, and get a personalized meal plan from
				Smashit personal trainers.
			</h1>
			<p class="sub-title">
				Whether you're trying to lose, maintain, or gain weight, our calorie
				calculator and Smashit personal trainers can help you reach your goals
				in a healthy and sustainable way.
			</p>
		</div>
		<div class="cta-wrapper">
			<button class="cta"> Learn more about SmashIt personal coaching</button>
		</div>
	</header>
	<CalorieCalc client:only />
</Layout>

<style>
	header {
		padding: 3rem 1rem 6rem 1rem;
		background-color: hsl(var(--bg-color));
		color: hsl(var(--bg-color));
		margin-block: 6rem 0;
		position: relative;
		overflow: hidden;
		display: flex;
		flex-wrap: wrap;
	}

	.skew-divider {
		position: absolute;
		inset: 0;
		transform: skewY(-5deg);
        background: hsl(var(--bg-contrast));
		transform-origin: top left;
		z-index: 0;
	}

	.title-wrapper {
		z-index: 5;
        /* outline: 1px solid green; */
	}

	h1 {
		font-size: clamp(2rem, 1.2rem + 1vw, 3rem);
		text-align: start;
		max-width: 50ch;
		font-weight: 700;
		padding-block: 1em;
		line-height: 1.3;
	}

	.sub-title {
		opacity: 0.7;
		font-size: clamp(1rem, 1rem + 0.5vw, 1.75rem);
		max-width: 50ch;
		line-height: 1.4;
	}

	.cta-wrapper {
		display: grid;
		justify-content: right;
		align-items: center;
		padding: 4vw 2vw;
		z-index: 5;
        /* outline: 1px solid blue; */

	}

	.cta {
		padding: 1rem 2rem;
		max-width: 30ch;
		border: 3px solid hsl(var(--accent-color));
		border-radius: 400px;
        background-color: hsl(var(--accent-color));
		font-size: clamp(1rem, 1rem + 0.5vw, 1.75rem);
        color: hsl(var(--bg-contrast));
        box-shadow: 3px 3px 3px 0px hsl(0 0% 0% / 0.3);
	}
    
    .cta:hover, .cta:focus-visible{
        box-shadow: 5px 5px 3px 0px hsl(0 0% 0% / 0.5);
    }
</style>
